{% extends 'form_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        #gender-radio {
            margin-top: 2em;
        }
    </style>

{% endblock %}

{% block title %}
    {{ parent() }} Créer compte compétiteur
{% endblock %}

{% block forms_content %}
    <div class="container">
        <div class="competitor-form col-sm-offset-2 col-sm-8">
            {{ form_start(form, {'attr': {'data-toggle': 'validator', 'role':'form'}}) }}

            <!--firstName-->
            <div class="form-group has-feedback race-form-border">
                <label for="firstName" class="control-label">Nom</label>
                {{ form_widget(form.firstName, {'attr': {'class':"form-control"}}) }}
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>

            <!--lastName-->
            <div class="form-group has-feedback race-form-border">
                <label for="lastName" class="control-label">Prénom</label>
                {{ form_widget(form.lastName, {'attr': {'class':"form-control"}}) }}
                <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
            </div>

            <!--Date & gender-->
            <div class="row">
                <!--date-->
                <div class="form-group has-feedback col-lg-offset-1 col-sm-4">
                    <label for="date" class="control-label">Date de naissance :</label>
                    {{ form_widget(form.date, {'attr': {'class':"form-control", 'style':"display: none"}}) }}
                    <div class="help-none with-errors"></div>
                    <input id="register-form-dp" class="form-control">
                </div>

                <!--gender-->
                {{ form_widget(form.sexe, {'attr': {'class':"form-control", 'style':"display: none"}}) }}
                <div id="gender-radio">
                    <label for="radio-1">Masculin</label>
                    <input type="radio" name="radio-1" id="radio-1" value="m">
                    <label for="radio-2">Féminin</label>
                    <input type="radio" name="radio-1" id="radio-2" value="f">
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Valider</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        registration();
    </script>
{% endblock %}
