{% extends 'base.html.twig' %}


{% block organizer_menu %}
    <button class="btn-xs btn-success" onclick="location.href = '{{ path('competition_new') }}'">Ajouter une
        compétition
    </button>
    <button class="btn-xs btn-success" onclick="location.href = '{{ path('competition_show_byOrganizer') }}'">Toutes mes
        compétitions
    </button>
{% endblock %}


{% block body %}

    <div class="text-right">
        <button class="btn-xs btn-primary" id="competitionDisplayButton" value="future">
            Compétition passées
        </button>
    </div>
    <br>
    <div class="row">
        {% for competition in competitions %}
        {% if competition.isPassed %}
        <div id="competitionsPassed">
            {% include 'competition/modelList.twig' %}
        </div>
        {% else %}
        <div id="competitionsNoPassed">
            {% include 'competition/modelList.twig' %}
        </div>
        {% endif %}
        {% endfor %}
    </div>


{% endblock %}

    {% block javascripts %}
        {{ parent() }}

        <script>
            competitionShowList()
        </script>

    {% endblock %}