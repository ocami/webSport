{% extends 'rankLayout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block title %}
    {{ parent() }} {{ championship.name }}
{% endblock %}

{% block body %}
    <div id="championship-categories" class="row">
        <div id="categories-button" class="col-xs-12">
            {% for c in categories %}
                <div class="btn-container col-xs-4 col-sm-3 col-md-2 col-lg-2">
                    <button class="btn-xs btn-info" value="{{ c.id }}">{{ c.name }}</button>
                </div>
            {% endfor %}
        </div>
        <div id="categories-list" class="col-xs-offset-2 col-xs-8">
            <div class="panel-group">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="panel-title">
                            <a data-toggle="collapse" href="#collapse-race-categories">Catégories</a>
                        </div>
                    </div>
                    <div id="collapse-race-categories" class="panel-collapse collapse">
                        <ul class="list-group">
                            {% for c in categories %}
                                <li class="list-group-item" style="text-align: center">
                                    <button class="btn-xs btn-link" value="{{ c.id }}">{{ c.name }}</button>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--loader-->
    <div id="loader" class="row">
        <div id="loader-div"></div>
    </div>
    <!--tables-->
    <div class="row">
        <div id="table-championship-container" class="table-model col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6" style="visibility: hidden">
            <table id="table-championship" class="table table-striped table-bordered dt-responsive nowrap" width="100%">
                <thead>
                <tr class="table-row">
                    <th>Cls</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Point</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        var loaderHeight = $(window).height() - $('#championship-categories').height();
        loaderDivStart(null, loaderHeight);

        var championship = {{ championship.id }};

        championshipShow(championship, loaderHeight);

    </script>



{% endblock %}

