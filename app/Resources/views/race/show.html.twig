{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.2/css/responsive.dataTables.min.css"/>
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.2/css/responsive.bootstrap.min.css"/>
{% endblock %}


{% block title %}
    {{ parent() }} {{ race.name }}
{% endblock %}

{% block organizer_menu %}
    {% if race.isOrganizer == true %}
        {% if race.supervised == false %}
            <button class="btn-xs btn-success" onclick="location.href = '{{ path('race_edit', {'id':race.id} ) }}'">
                Editer
            </button>
        {% endif %}

        {% if race.enrol == true %}
            <button class="btn-xs btn-success"
                    onclick="location.href = '{{ path('race_enrol_closed', {'id':race.id} ) }}'">Clore les
                inscriptions
            </button>
            <button class="btn-xs btn-warning"
                    onclick="location.href = '{{ path('race_simulateEnrol', {'id':race.id} ) }}'">Simuler
                inscription
            </button>
        {% endif %}

        {% if race.state == 1 %}
            <button class="btn-xs btn-warning"
                    onclick="location.href = '{{ path('race_competitorsTimes', {'id':race.id} ) }}'">Importer les
                temps de courses
            </button>
        {% endif %}
    {% endif %}
{% endblock %}

{% block competitor_menu %}
    {% if race.competitorRegister == 1 %}
        <input type="button" class="btn-xs btn-info" value="S'inscrire"
               onclick="location.href = '{{ path('app_competitor_addrace', {'race': race.id}) }}';">
    {% endif %}
    {% if race.competitorRegister == 2 %}
        <input type="button" class="btn-xs btn-info" value="Annuler inscription"
               onclick="location.href = '{{ path('app_competitor_removerace', {'race': race.id}) }}';">
    {% endif %}

    <button class="btn-xs btn-info"
            onclick="location.href = '{{ path('competition_show', {'id':race.competition.id} ) }}'">Retour à la
        compétion
    </button>
{% endblock %}

{% block body %}
    <div id="race-show">
        <!--panel-show-->
        <div class="row">
            <div class="panel-show col-xs-12">
                <!--race panel-->
                <div class="col-md-4">
                    <div class="panel panel-primary first-panel">
                        <div class="panel-heading">
                            <span class="title">{{ race.name }}</span>
                            <span class="pull-right panel-header-img">
                                    {% if race.inChampionship %}
                                        <img src="{{ asset('img/cup.jpg') }}">
                                    {% endif %}

                                {% if race.valid %}
                                    {{ race.competitorRegister|registerImg }}
                                {% endif %}
                                </span>
                        </div>
                        <div class="panel-body row">
                            <div class="col-xs-8 competition ">
                                <a href='{{ path('competition_show', {'id':race.competition.id} ) }}'><span
                                            class="glyphicon glyphicon-circle-arrow-left"></span></a>
                                <span class="">{{ race.competition.name }}</span>
                            </div>
                            <div class="col-xs-4">
                                <span class="distance">{{ race.distance }} KM</span>
                            </div>
                            <div class="organizer col-xs-12">Orga : {{ race.competition.organizer.name }}</div>
                        </div>
                    </div>
                </div>

                <!--datetime panel-->
                <div class="col-md-4">
                    <div class="panel panel-primary date-time-panel">
                        <div class="panel-heading "><span class="glyphicon glyphicon-time"></span></div>
                        <div class="panel-body">
                            <span class="date-day">{{ race.dateTime|localizeddate('none', 'none', 'fr_BR', null, "cccc d MMMM") }}</span>
                            <span class="date-hour">{{ race.dateTime|date('H') }}
                                H {{ race.dateTime|date('i') }}</span>
                        </div>
                    </div>
                </div>

                <!--location panel-->
                <div class="col-md-4">
                    <div class="panel panel-primary location-panel">
                        <div class="panel-heading">
                            <span class="glyphicon glyphicon-map-marker"></span>
                            <span class="pull-right map-link">
                                    {{ asset('img/google_map.jpg')|googleMapLink(race.competition.location.x,race.competition.location.y) }}
                            </span>
                        </div>
                        <div class="panel-body race-location">
                            <span>{{ race.competition.location.street }}</span>
                            <span>{{ race.competition.location.postCode }}  {{ race.competition.location.city }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--race-show-categories-->
        <div class="row">
            <div id="categories-button" class="col-xs-12">
                <div class="btn-container col-xs-4 col-sm-3 col-md-2 col-lg-2">
                    <button class="btn-xs btn-primary" value="all">Classement général</button>
                </div>
                {% for c in race.categories %}
                    <div class="btn-container col-xs-4 col-sm-3 col-md-2 col-lg-2">
                        <button class="btn-xs btn-info" value="{{ c.id }}">{{ c.name }}</button>
                    </div>
                {% endfor %}
            </div>
            <div id="categories-list" class="col-xs-12">
                <button class="btn-xs btn-primary btn-general col-xs-4" value="all">Général</button>
                <div class="panel-group col-xs-8">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <a data-toggle="collapse" href="#collapse-race-categories">Catégories</a>
                            </div>
                        </div>
                        <div id="collapse-race-categories" class="panel-collapse collapse">
                            <ul class="list-group">
                                {% for c in race.categories %}
                                    <li class="list-group-item" style="text-align: center">
                                        <button class="btn-xs btn-link" value="{{ c.id }}">{{ c.name }}</button>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--loader-->
    <div id="loader" class="row">
        <div id="loader-div"></div>
    </div>

    <!--tables-->
    <div id="show-race-tables" class="row">
        <div class="table-container" class="col-xs-12">
            <div id="table-race-container">
                <table id="table-race" class="table table-striped table-bordered dt-responsive nowrap" width="100%">
                    <thead>
                    <tr class="table-row"></tr>
                    </thead>
                </table>
            </div>
            <div id="table-category-container">
                <table id="table-category" class="table table-striped table-bordered dt-responsive nowrap" width="100%">
                    <thead>
                    <tr class="table-row"></tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.2/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.2/js/responsive.bootstrap.min.js"></script>


    <script>
        var race = {{ race.id }};

        laFonction(race);

        function laFonction(race) {
            var $btn = $('#categories-button').find('button');
            var $btnList = $('#categories-list').find('button');
            var $container = $('#show-race-tables').find('.table-container');

            var $tableRace = $('#table-race');
            var $tableRaceContainer = $('#table-race-container');
            var $tableCategory = $('#table-category');
            var $tableCategoryContainer = $('#table-category-container');
            var rowTable;

            var loaderHeight = $(window).height() - $('#race-show').height();

            //init
            getData('all');

            //events
            $btn.click(function () {
                getData($(this).val());
                $btn.attr('class', 'btn-xs btn-info col-xs-12');
                $(this).attr('class', 'btn-xs btn-primary col-xs-12');
            });

            $btnList.click(function () {
                getData($(this).val());
                $("#collapse-race-categories").collapse('hide');

            });

            //functions
            function getData(category) {
                loaderDivStart(null, loaderHeight);
                $container.css('visibility', 'hidden');
                var path = Routing.generate('race_Table', {
                    idRace: race,
                    category: category
                });

                $.ajax({
                    url: path,
                    success: function (data) {
                        displayTest(data, category);
                    },
                    error: function () {
                        ajaxError();
                    }
                });
            }

            function displayTest(data, category) {

                var options = {
                    language: language,
                    responsive: true,
                    bInfo: false,
                    destroy: true,
                    data: [],
                    columns: [],
                    columnDefs: []
                };

                $container.removeClass();
                options.data = data.competitors;

                if (category === 'all') {

                    rowTable = $tableRace.find('.table-row')

                    switch (data.race_state) {
                        case 0:
                            raceOpenOptions();
                            break;

                        case 1:
                            raceClosedOptions();
                            break;

                        case 2:
                            racePassedOptions();
                            break;
                    }

                    $tableCategoryContainer.hide();
                    $tableRaceContainer.show();
                    $tableRace.dataTable(options);

                } else {

                    rowTable = $tableCategory.find('.table-row');

                    switch (data.race_state) {
                        case 0:
                            raceCategoryOpenOptions();
                            break;

                        case 1:
                            raceCategoryCloseOptions();
                            break;

                        case 2:
                            raceCategoryPassedOptions();
                            break;
                    }

                    $tableRaceContainer.hide();
                    $tableCategoryContainer.show();
                    $tableCategory.dataTable(options);
                }


                $('html, body').animate({scrollTop: $('#loader').offset().top}, 750);
                loaderDivStop();
                $container.css('visibility', 'visible');

                function raceOpenOptions() {
                    options.columns = [
                        {
                            "data": "lastName",
                            "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                                $(nTd).html("<span class='profile-href' onclick='profilData(" + oData.id + " )' data-toggle='modal' data-target='#competitor-modal'>" + oData.lastName + "</span>");
                            }
                        },
                        {
                            "data": "firstName",
                            "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                                $(nTd).html("<span class='profile-href' onclick='profilData(" + oData.id + " )' data-toggle='modal' data-target='#competitor-modal'>" + oData.firstName + "</span>");
                            }
                        },
                        {data: 'category'}
                    ];

                    rowTable.empty();
                    rowTable.append("<th>Nom</th>");
                    rowTable.append("<th>Prénom</th>");
                    rowTable.append("<th>Catégorie</th>");

                    $container.addClass('col-lg-offset-2 col-lg-8');
                }

                function raceClosedOptions() {

                    options.columns = [
                        {data: 'number', className: "row-ranck"},
                        {
                            "data": "lastName",
                            "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                                $(nTd).html("<span class='profile-href' onclick='profilData(" + oData.id + " )' data-toggle='modal' data-target='#competitor-modal'>" + oData.lastName + "</span>");
                            }
                        },
                        {
                            "data": "firstName",
                            "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                                $(nTd).html("<span class='profile-href' onclick='profilData(" + oData.id + " )' data-toggle='modal' data-target='#competitor-modal'>" + oData.firstName + "</span>");
                            }
                        },
                        {data: 'category'},
                    ];
                    options.columnDefs = [
                        {
                            targets: 0,
                            width: "1%"
                        }
                    ];

                    rowTable.empty();
                    rowTable.append("<th>Dossard</th>");
                    rowTable.append("<th>Nom</th>");
                    rowTable.append("<th>Prénom</th>");
                    rowTable.append("<th>Catégorie</th>");

                    $container.addClass('col-lg-offset-2 col-lg-8');
                }

                function racePassedOptions() {

                    options.columns = [
                        {data: 'ranck', className: "row-ranck"},
                        {
                            "data": "lastName",
                            "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                                $(nTd).html("<span class='profile-href' onclick='profilData(" + oData.id + " )' data-toggle='modal' data-target='#competitor-modal'>" + oData.lastName + "</span>");
                            }
                        },
                        {
                            "data": "firstName",
                            "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                                $(nTd).html("<span class='profile-href' onclick='profilData(" + oData.id + " )' data-toggle='modal' data-target='#competitor-modal'>" + oData.firstName + "</span>");
                            }
                        },
                        {data: 'number', className: "row-ranck"},
                        {data: 'chronoString', className: "row-ranck"},
                        {data: 'category'},
                        {data: 'ranckCategory', className: "row-ranck"}
                    ];
                    options.columnDefs = [
                        {
                            targets: 0,
                            width: "1%"
                        },
                        {
                            targets: 3,
                            width: "5%"
                        },
                        {
                            targets: 6,
                            width: "5%"
                        }
                    ];

                    rowTable.empty();
                    rowTable.append("<th>Gen.</th>");
                    rowTable.append("<th>Nom</th>");
                    rowTable.append("<th>Prénom</th>");
                    rowTable.append("<th>Doss.</th>");
                    rowTable.append("<th>Chrono</th>");
                    rowTable.append("<th>Catégorie</th>");
                    rowTable.append("<th>Cls.</th>");

                    if (data.inChampionship) {
                        options.columns.push({data: 'points', className: "row-ranck"});
                        options.columnDefs.push({
                            targets: 7,
                            width: "5%"
                        });
                        rowTable.append("<th>Point</th>");
                    }

                    $container.addClass('col-lg-offset-1 col-lg-10');
                }

                function raceCategoryOpenOptions() {
                    options.columns = [
                        {
                            "data": "lastName",
                            "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                                $(nTd).html("<span class='profile-href' onclick='profilData(" + oData.id + " )' data-toggle='modal' data-target='#competitor-modal'>" + oData.lastName + "</span>");
                            }
                        },
                        {
                            "data": "firstName",
                            "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                                $(nTd).html("<span class='profile-href' onclick='profilData(" + oData.id + " )' data-toggle='modal' data-target='#competitor-modal'>" + oData.firstName + "</span>");
                            }
                        },
                    ];

                    rowTable.empty();
                    rowTable.append("<th>Nom</th>");
                    rowTable.append("<th>Prénom</th>");

                    $container.addClass('col-lg-offset-3 col-lg-6');
                }

                function raceCategoryCloseOptions() {
                    options.columns = [
                        {data: 'number', className: "row-ranck"},
                        {
                            "data": "lastName",
                            "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                                $(nTd).html("<span class='profile-href' onclick='profilData(" + oData.id + " )' data-toggle='modal' data-target='#competitor-modal'>" + oData.lastName + "</span>");
                            }
                        },
                        {
                            "data": "firstName",
                            "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                                $(nTd).html("<span class='profile-href' onclick='profilData(" + oData.id + " )' data-toggle='modal' data-target='#competitor-modal'>" + oData.firstName + "</span>");
                            }
                        },
                    ];
                    options.columnDefs = [
                        {
                            targets: 0,
                            width: "1%"
                        }
                    ];

                    rowTable.empty();
                    rowTable.append("<th>Dossard</th>");
                    rowTable.append("<th>Nom</th>");
                    rowTable.append("<th>Prénom</th>");

                    $container.addClass('col-lg-offset-3 col-lg-6');
                }

                function raceCategoryPassedOptions() {
                    options.columns = [
                        {data: 'ranckCategory', className: "row-ranck"},
                        {
                            "data": "lastName",
                            "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                                $(nTd).html("<span class='profile-href' onclick='profilData(" + oData.id + " )' data-toggle='modal' data-target='#competitor-modal'>" + oData.lastName + "</span>");
                            }
                        },
                        {
                            "data": "firstName",
                            "fnCreatedCell": function (nTd, sData, oData, iRow, iCol) {
                                $(nTd).html("<span class='profile-href' onclick='profilData(" + oData.id + " )' data-toggle='modal' data-target='#competitor-modal'>" + oData.firstName + "</span>");
                            }
                        },
                        {data: 'number', className: "row-ranck"},
                        {data: 'chronoString', className: "row-ranck"},
                        {data: 'ranck', className: "row-ranck"}
                    ];
                    options.columnDefs = [
                        {
                            targets: 0,
                            width: "1%"
                        },
                        {
                            targets: 3,
                            width: "5%"
                        },
                        {
                            targets: 5,
                            width: "5%"
                        }
                    ];

                    rowTable.empty();
                    rowTable.append("<th>Cls</th>");
                    rowTable.append("<th>Nom</th>");
                    rowTable.append("<th>Prénom</th>");
                    rowTable.append("<th>Doss</th>");
                    rowTable.append("<th>Chrono</th>");
                    rowTable.append("<th>Gen.</th>");

                    if (data.inChampionship) {
                        options.columns.push({data: 'points', className: "row-ranck"});
                        options.columnDefs.push({
                            targets: 5,
                            width: "5%"
                        });
                        rowTable.append("<th>Point</th>");
                    }

                    $container.addClass('col-lg-offset-2 col-lg-8');
                }
            }
        }
    </script>



{% endblock %}

