{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} index
{% endblock %}

{% block body %}


    {{ competition.name }}

    <div class="row">
        {% for race in races %}
            <div class="col-xs-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ race.name }}</h3>
                    </div>
                    <div class="panel-body">

                        {{ race.km }}<br>

                    </div>
                    <div class="panel-footer">
                        {% if isOrganizer == true %}
                            <input type="button" class="btn-xs btn-success" value="Editer"
                                   onclick="location.href = '{{ path('race_edit', {'id': race.id}) }}';">
                        {% endif %}
                        <input type="button" class="btn-xs btn-info" value="Détail"
                               onclick="location.href = '{{ path('race_show', {'id': race.id}) }}';">
                        {% if is_granted('ROLE_COMPETITOR') %}
                            <input type="button" class="btn-xs btn-info" value="S'inscrire"
                                   onclick="location.href = '{{ path('app_competitor_addrace', {'race': race.id}) }}';">
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


    {% if isOrganizer == true %}
        <input type="button" class="btn btn-success" value="Ajouter une course hors championat"
               onclick="location.href = '{{ path('race_new', {'idCompetition':competition.id} ) }}';">

        <input type="button" class="btn btn-success" value="Ajouter une course  championat"
               onclick="location.href = '{{ path('race_new_championship', {'idCompetition':competition.id}) }}';">

        <input type="button" class="btn btn-success" value="Ajouter une catégorie"
               onclick="location.href = '{{ path('category_new', {'idCompetition':competition.id}) }}';">

    {% endif %}

{% endblock %}